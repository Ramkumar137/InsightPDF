# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/pdf_summarizer

# Firebase Configuration (choose one method)
# Method 1: Path to service account JSON file
FIREBASE_CREDENTIALS_PATH=/path/to/serviceAccountKey.json

# Method 2: JSON string (useful for deployment platforms)
# FIREBASE_CREDENTIALS_JSON='{"type":"service_account","project_id":"your-project",...}'

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-frontend.com

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
MAX_FILES=5
UPLOAD_DIR=uploads

# AI Model Settings
MODEL_NAME=t5-small
MAX_INPUT_LENGTH=3000
MAX_SUMMARY_LENGTH=250
MIN_SUMMARY_LENGTH=80