# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/pdf_summarizer

# Firebase Authentication
# Option 1: Path to Firebase credentials JSON file
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# Option 2: Firebase credentials as JSON string (for deployment)
# FIREBASE_CREDENTIALS_JSON='{"type": "service_account", "project_id": "...", ...}'

# CORS Settings (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://your-frontend.com

# AI Model Configuration
MODEL_NAME=t5-small
MAX_INPUT_LENGTH=3000
MAX_SUMMARY_LENGTH=250
MIN_SUMMARY_LENGTH=80

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes